    h1{margin:0 0 8px;color:#333}
    p.lead{margin:0 0 18px;color:#666}
    .choices{display:flex;gap:14px;justify-content:center;flex-wrap:wrap}
  .card{width:260px;text-align:center;cursor:pointer;padding:8px}
  .card img{width:240px;height:160px;object-fit:cover;border-radius:10px;border:4px solid transparent;transition:border-color .12s,transform .12s}
