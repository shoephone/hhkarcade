  .card .title{font-weight:700;margin-top:10px}
  .card .desc{color:#666;font-size:13px;margin-top:6px}
    button.back{position:fixed;left:14px;top: 80px;px;padding:10px 14px;border-radius:8px;border:none;background:var(--accent);color:#fff;cursor:pointer;display:none}
