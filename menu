<body>
  <button class="back" id="backBtn">‚Üê Back</button>
  <div class="menu" id="menu">
    <div class="choices" aria-hidden="false">
      <button class="card" id="playPong" title="Play Pong" aria-label="Play Hello Kitty Pong">
        <img src="images/pong.png" alt="Pong">
      </button>
      <button class="card" id="playCatcher" title="Play Catcher" aria-label="Play Hello Kitty Catcher">
        <img src="images/bowsbombs.png" alt="Catcher">
      </button>
    </div>
  </div>

  <!-- iframe used to host the selected game. We set src dynamically so returning to menu unloads the game. -->
  <iframe id="playerFrame" class="player" sandbox="allow-same-origin allow-scripts allow-forms"></iframe>

  <script>
    const menu = document.getElementById('menu');
    const backBtn = document.getElementById('backBtn');
    const iframe = document.getElementById('playerFrame');

    function openGame(path){
      // hide menu, show iframe
      menu.style.display = 'none';
      iframe.style.display = 'block';
      backBtn.style.display = 'inline-block';
      // set src -- using relative paths: index.html (pong) and ../hellokittycatcher.html (catcher)
      iframe.src = path;
      // scroll to top to ensure canvas is visible on mobile
      window.scrollTo(0,0);
    }

  document.getElementById('playPong').addEventListener('click', ()=> openGame('index.html'));
  // catcher moved into its own Catcher/ folder
  document.getElementById('playCatcher').addEventListener('click', ()=> openGame('..\/Catcher\/hellokittycatcher.html'));

    backBtn.addEventListener('click', ()=>{
      // unload game by clearing src to stop intervals/animations
      iframe.src = 'about:blank';
      iframe.style.display = 'none';
      backBtn.style.display = 'none';
      menu.style.display = 'block';
      window.scrollTo(0,0);
    });
  </script>
</body>
</html>
